{
    "manifest_version": 2,
    "name": "X-2-Y",
    "version": "0.1",
    "description" : "Replaces included strings with targeted strings of a URL and redirects to the new URL",
    
    "browser_action": {
        "default_title": "Set Xs & Ys",
		"default_popup": "html/index.html"
	},
    
    "background": {
        "scripts": ["src/background.js"]
    },
    
    "permissions": [
        "webRequest", 
        "webRequestBlocking",
        "storage",
        "<all_urls>"
    ]
}